<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/message_margin_horizontal"
    android:layout_marginVertical="@dimen/message_margin_vertical"
    android:background="@drawable/message_background_rounded"
    android:backgroundTint="@color/message_background_color">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/message_padding_horizontal"
        android:paddingVertical="@dimen/message_padding_vertical"
        android:textColor="@color/message_text_color"
        android:textSize="@dimen/message_text_size"
        app:layout_constraintEnd_toStartOf="@id/message_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Message" />

    <ImageView
        android:id="@+id/message_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/message_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/message_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/plus_image"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

